{
  "manifest_version": 3,
  "name": "Aurelia 2 Inspector",
  "version": "2.1.0",
  "description": "A Chrome plugin adding a new inspector pane to the Elements panel, providing Aurelia-specific information about selected elements.",
  "devtools_page": "devtools.html",
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "build/contentscript.js",
        "devtools.html",
        "devtools-background.html"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["build/contentscript.js", "build/test-script.js"],
      "run_at": "document_start"
    }   ,
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["build/test-script.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["build/detector.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/16-GREY.png",
      "48": "images/48-GREY.png",
      "128": "images/128-GREY.png"
    },
    "default_title": "Aurelia 2 Devtools",
    "default_popup": "popups/missing.html"
  },
  "background": {
    "service_worker": "build/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["file:///*", "http://*/*", "https://*/*"]
}
